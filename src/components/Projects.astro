---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-sky-600 text-white",
    icon: Tailwind,
  },
}

const PROJECTS = [
  {
    title: "Realtime Chat",
    period: "Mar 2025 – Apr 2025",
    description:
      "A real-time chat application built with Next.js and Tailwind CSS, supporting live messaging and modern UI.",
    link: "https://worksync.thanhluan.tech",
    github: "https://github.com/3Luan/worksync",
    image: "/projects/worksync.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "UTC2 Social",
    period: "Jan 2025 – Feb 2025",
    description:
      "A social platform for students featuring programming challenges, built with Next.js and Tailwind CSS.",
    link: "https://socialutc2.vercel.app/",
    github: "https://github.com/3Luan/UTC2_Social",
    image: "/projects/socialUTC2.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<section class="flex flex-col gap-20">
  {
    PROJECTS.map(({ image, title, period, description, tags, link, github }) => (
      <article class="group grid grid-cols-1 gap-10 md:grid-cols-2 items-center">
        <!-- Image -->
        <div class="relative overflow-hidden rounded-xl shadow-lg">
          <img
            src={image}
            alt={title}
            loading="lazy"
            class="h-60 w-full object-cover transition-transform duration-500 group-hover:scale-105 md:h-full"
          />
        </div>

        <!-- Content -->
        <div class="flex flex-col gap-3">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
            {title}
          </h3>

          <!-- Period -->
          <span class="text-sm text-gray-500 dark:text-gray-400">
            {period}
          </span>

          <p class="mt-2 text-gray-700 dark:text-gray-400 leading-relaxed">
            {description}
          </p>

          <!-- Tags -->
          <ul class="flex flex-wrap gap-2 mt-1">
            {
              tags.map((tag) => (
                <li>
                  <span
                    class={`inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-medium ${tag.class}`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))
            }
          </ul>

          <!-- Actions -->
          <footer class="flex gap-4 pt-3">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-5" />
                Code
              </LinkButton>
            )}

            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    ))
  }
</section>
